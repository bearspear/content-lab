{
  "name": "content-lab",
  "version": "1.0.0",
  "description": "Laboratory for content transformation - multi-tool editor with markdown, JSON, CSV, and JavaScript support",
  "keywords": [
    "markdown",
    "editor",
    "converter",
    "content",
    "laboratory",
    "json",
    "csv",
    "javascript",
    "playground",
    "text-editor",
    "angular"
  ],
  "author": "Michael Behringer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbehringer/content-lab.git"
  },
  "homepage": "https://github.com/mbehringer/content-lab#readme",
  "scripts": {
    "ng": "ng",
    "start": "ng serve content-lab",
    "start:server": "nx serve server",
    "start:dev": "concurrently \"npm run start\" \"npm run start:server\"",
    "build": "ng build content-lab",
    "build:server": "nx build server",
    "build:full": "bash scripts/build-with-config.sh full",
    "build:lightweight": "bash scripts/build-with-config.sh lightweight",
    "build:developer": "bash scripts/build-with-config.sh developer",
    "build:writer": "bash scripts/build-with-config.sh writer",
    "build:all": "npm run build:full && npm run build:lightweight && npm run build:developer && npm run build:writer",
    "build:executables": "nx run server:deploy-frontend && nx run server:pkg",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/content-lab/browser/stats.json"
  },
  "private": true,
  "dependencies": {
